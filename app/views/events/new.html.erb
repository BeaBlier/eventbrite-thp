<h1>Come here to create ton super event ! </h1>


<div class="row">
    <div class="col-md-6 col-md-offset-3 well">
        <%= form_tag '/events' do  %>
         <div class="form-group">
          <div class="form-group">
            <label for="description">Description</label>
            <%= text_field_tag :description, nil, class: 'form-control' %>
          </div>
          <div class="form-group">
            <label for="date">Date</label>
            <%= date_field_tag :date, nil, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label for="place">Place</label>
          <%= text_field_tag :place, nil, class: 'form-control' %>
        </div>
          <%= submit_tag 'Submit', class: 'btn btn-primary btn-block' %>

        <% end %>
